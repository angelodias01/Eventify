{
    "compilerOptions": {
      "target": "ES5",
      "lib": ["dom", "esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@web/*": ["apps/web/*"],
        "@mobile/*": ["apps/mobile/*"],
        "@ui/*": ["packages/ui/src/*"],
        "@utils/*": ["packages/utils/src/*"],
        "@api/*": ["packages/api/src/*"]
      }
    },
    "include": [
      "apps/**/*",
      "packages/**/*"
    ]
  }
  